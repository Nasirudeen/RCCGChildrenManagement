@model RccgChildrenManagement.Models.User
@{
    ViewData["Title"] = "Validate";
    Layout = "_Layout";
}


<form class="form-signin" asp-action="Validate" method="post" style="margin-top:30px;">

    <div class="card border p-4" style="width:68%; margin-left:40%; margin-bottom:40%; height:500px;">
        <center> <h3>Change Password</h3></center> 
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })</h5>
        <div class="form-group row" style="margin-top:40px;">
            <label for="username" class="col-sm-3 col-form-label" align="right">Email</label>
            <div class="col-auto">
                <input type="email" class="form-control" value="@Model.EmailAddress" name="EmailAddress" id="inputPassword3" readonly style="width:350px;" required>
            </div>
        </div>
        <div class="form-group row" style="margin-top:40px;">
            <label for="inputPassword3" class="col-sm-3 col-form-label" align="right">NewPassword</label>
            <div class="col-auto">
                <input type="password" class="form-control" name="NewPassword" id="inputPassword3" placeholder="Enter your NewPassword" style="width:350px;" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-3 col-form-label" align="right">ConfirmPassword</label>
            <div class="col-auto">
                <input type="password" class="form-control" name="ConfirmPassword" id="inputPassword3" placeholder="Enter your ConfirmPassword" style="width:350px;" required>
                <button class="btn btn-lg btn-warning btn-block mt-5" type="submit" style="width:77%; margin-top:5%; margin-left:10%;">Reset</button>

            </div>
        </div>
</form>
<script type="text/javascript">

@if (TempData["status"] != null)
{
    <text>alert('Reset Password done Successfully'); </text>
}
</script>
