@{
    ViewData["Title"] = "Home  Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}

<div>
    @ViewBag.email
    <marquee class="text-center" behavior="scroll" direction="up" scrollamount="3">
        <h2> RCCG GLORY WORSHIP CENTRE  CHILDREN APPLICATION </h2>
    </marquee>
</div>
<br />

<div class="container row reg-panel">
    <div class="col-md-4">
        <div id="center">
            <div>
                <img style="width: 20rem; transition: width 2s" src="~/images/Rccg.png" alt="RCCG Logo">

            </div>

            <h1>Children Church</h1>
            <p>Register your kids for church</p>
        </div>

        <div style="background-color: none; color: white;  margin-top: 18rem">
            <p style="font-style: italic;">Jesus Christ the same yesterday, today, and forever more. Amen</p>
        </div>
    </div>
    <div class="col-xl-8 table-responsive" style="border: 1px;" solid #ccc; padding-top: 1rem; width="xl: 1240px;">
        <div class="jumbotron">
            <marquee class="text-center" behavior="scroll" direction="up" scrollamount="3">
                <h2> WELCOME TO  RCCG GLORY WORSHIP CENTRE  CHILDREN APPLICATION</h2>
            </marquee>
        </div>
        @if (User.IsInRole("Parent"))
        {
            <table class="table-responsive" >

                <tr>

                    <td><a style="background-color:blue;" href="~/Children/Display"><img src="~/images/parent.png" width="230PX" height="250px" class="ts-avatar hidden-side" alt="" style="font-weight:bolder;"></a> </td>


                    <td align="center"><a style="background-color:blue;" href="~/Children/ParentDataTable"><img src="~/images/drop.png" width="230PX" height="250px" class="ts-avatar hidden-side" alt="" style="font-weight:bolder;"></a></td>
                    <td><a style="background-color:blue;" href="~/User/Change"><img src="~/images/changepwd.png" width="230PX" height="250px" class="ts-avatar hidden-side" alt="" style="font-weight:bolder;">  </a> </td>

                </tr>
                <tr>

                    <td align="center" style="font-size:26px; color:blue;"> CHILDREN LIST  </td>



                    <td align="center" style="font-size:26px; color:skyblue;">DROP OFF </td>

                    <td align="center" style="font-size:26px; color:orangered;">CHANGE PASSWORD </td>


                </tr>
                &nbsp;
                &nbsp;
                &nbsp;
                <tr>
                </tr>

            </table>
        }
        @if (User.IsInRole("Admin"))
        {
            <style>
                .accordion {
                    background-color: #eee;
                    color: #444;
                    cursor: pointer;
                    padding: 18px;
                    width: 100%;
                    border: none;
                    text-align: left;
                    outline: none;
                    font-size: 15px;
                    transition: 0.4s;
                }

                    .active, .accordion:hover {
                        background-color: #ccc;
                    }

                .panel {
                    padding: 0 18px;
                    display: none;
                    background-color: white;
                    overflow: hidden;
                }
            </style>

            <center> <h2>Menu Description</h2> </center>

            <button class="accordion">Create Admin</button>
            <div class="panel">
                <p>It is used to create new Admin user in the application.</p>
            </div>

            <button class="accordion">Create Parent</button>
            <div class="panel">
                <p>It enables Admin to create a Parent.</p>
            </div>

            <button class="accordion">Manage</button>
            <div class="panel">
                <p>It enables Admin to view the list of Parents and children registered by each parent.</p>
            </div>
            <button class="accordion">Drop Off</button>
            <div class="panel">
                <p>It enables admin to drop off the children after scannibg the QRCode of the Parent to drop off.</p>
            </div>
            <button class="accordion">Pick Up</button>
            <div class="panel">
                <p>It enables Admin to Scan the Children code and compare if it matches the parent QRCode.</p>
            </div>
            <button class="accordion">Audit Trail</button>
            <div class="panel">
                <p>It enables Admin to view the list of all action executed in the site.</p>
            </div>
            <button class="accordion">Change Password</button>
            <div class="panel">
                <p>It enables Admin to change the password.</p>
            </div>
        }
        <script>
            var acc = document.getElementsByClassName("accordion");
            var i;

            for (i = 0; i < acc.length; i++) {
                acc[i].addEventListener("click", function () {
                    this.classList.toggle("active");
                    var panel = this.nextElementSibling;
                    if (panel.style.display === "block") {
                        panel.style.display = "none";
                    } else {
                        panel.style.display = "block";
                    }
                    event: "mouseover";
                    animate: 2000;
                    activeheader: "ui-icon-caret-1-n";
                    collapse:true;
                });
            }
        </script>
