@model IEnumerable<RccgChildrenManagement.Models.ResponsibleParty>

@{
    ViewData["Title"] = "ResponsibleParty Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="col-2">
    <h1 class="text-info" style="font-size:35px">ResponsibleParty List</h1>
</div>
<hr />
<br />
<div class="form-border" style="margin-top:40px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover" id="jayb1">
            <thead style="background-color: azure; font-size: 35px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ResponsiblePartyId)
                    </th>


                    <th>
                        FirstName
                    </th>

                    <th>
                        LastName
                    </th>
                    <th>
                        RegistrationId)
                    </th>
                    <th>
                        PersonType
                    </th>

                    <th>
                        EmailAddress
                    </th>

                    <th>
                        PhoneNo
                    </th>

                </tr>
            </thead>
            <tbody style="font-size: 35px;">
                @foreach (var item in Model)
                {
                    var Id = item.ResponsiblePartyId;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponsiblePartyId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.relfn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.relln)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.relemail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.relphonenumber)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>


                    <td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">

                            @if (User.IsInRole("SuperAdmin") | User.IsInRole("Admin") | User.IsInRole("Parent"))
                            {
                                <a asp-controller="ResponsibleParty" asp-route-id="@item.ResponsiblePartyId" asp-action="Edit" class="btn btn-primary mx-2"><i class="fas fa-edit"></i>&nbspEdit</a>

                            }
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <a asp-controller="ResponsibleParty" asp-route-id="@item.ResponsiblePartyId" asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt"></i>&nbspDelete</a>
                                @*<a asp-controller="User" asp-route-id="@item.UserId" asp-action="Details" class="btn btn-info mx-2"><i class="fa fa-ban fa-fw"></i>&nbspDetails</a>*@
                            }
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <center> <p><b>No items is created</b></p></center>
    }
</div>

<script>
    $(document).ready(function () {
        $("#jayb1").DataTable();

        $("#dialog-form").dialog({
            modal: true
        });
    });



</script>

@section Scripts{
    <script>


        $(document).ready(function () {
            $("#jayb1").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excel', 'pdf', 'print'
                ]
            });

            $("#dialog-form").dialog({
                modal: true
            });

        });
    </script>
}