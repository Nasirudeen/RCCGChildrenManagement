<div class="form-border table-responsive" style="margin-top:40px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover" id="jayb1">
            <thead style="background-color: azure; font-size: 35px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ChildrenId)
                    </th>
                    <th>
                        Children Name

                    </th>
                    <th>
                        +
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Class)
                    </th>
                    <th>
                       Registered
                    </th>
                    <th>
                        <a href="~/Children/Create/" class="btn btn-lg btn-success"><i class="fas fa-plus"></i>Create New</a>
                    </th>
                </tr>
            </thead>
            <tbody style="font-size: 35px;">
                @foreach (var item in Model)
                {
                    var Id = item.ChildrenId;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChildrenId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChildFirstName)

                            @Html.DisplayFor(modelItem => item.ChildLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Class)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Children" asp-route-id="@item.ChildrenId" asp-action="Edit" class="btn btn-primary mx-2"><i class="fas fa-edit"></i>&nbspEdit</a>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <center> <p><b>No Children is created</b></p></center>
    }
</div>
