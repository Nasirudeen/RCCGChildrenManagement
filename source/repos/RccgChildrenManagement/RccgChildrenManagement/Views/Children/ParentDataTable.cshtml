
@model IEnumerable<RccgChildrenManagement.Models.Children>
@{
    ViewBag.Title = "Parent DataTable";
   
    Layout = "~/Views/Shared/LayoutData.cshtml";
}
<div class="container row reg-panel">
    <div class="col-md-4">
        <div id="center">
            <div>
                <img style="width: 20rem; transition: width 2s" src="~/images/Rccg.png" alt="RCCG Logo">

            </div>

            <h1>Children Church</h1>
            <p>Register your kids for church</p>
        </div>

        <div style="background-color: none; color: white;  margin-top: 18rem">
            <p style="font-style: italic;">Jesus Christ the same yesterday, today, and forever more. Amen</p>
        </div>
    </div>
    <div class="col-xl-8" style="border: 1px;" solid #ccc; padding-top: 1rem; width="xl: 1380px;">

        @*<img style="margin-top: 80px;" src="~/images/Rccg.png" alt="" width="180" height="150">
        <img style="margin-top: 80px; float:right;" src="~/images/Rccg.png" alt="" width="180" height="150">*@
        <!--<CENTER><h3 style="margin-top: 30px; font-size: 45px;">RCCG GLORY WORSHIP CENTRE CHILDREN APPLICATION-->  @*@DateTime.Now.ToString("MMMM, yyyy")*@ <!--</h3></CENTER>-->
        <CENTER><h4 style="margin-top: 30px; font-size:55px;">DROP OFF  LIST  </h4></CENTER>
        <h4 style="text-align :right;">@DateTime.Now.ToString("dd MMMM, yyyy"), @DateTime.Now.ToShortTimeString()</h4>
        <hr>
        <br />
        <form method="post" asp-controller="Attendance" asp-action="Create">
            <table id="table_Name" class="table table-striped table-hover">
                <thead style="background-color: azure; font-size: 20px;">
                    <tr>
                        <th>SNo </th>
                        <th>  EmailAddress  </th>
                        <th> Children Name </th>
                        <th>  DOB  </th>
                        <th>  Class   </th>
                        <th>  Registered   </th>
                        <th>  ChildrenId   </th>
                        <th>  ACTION </th>

                    </tr>

                </thead>
                <tbody>
                    @{ int sn = 0; }
                    @foreach (var item in ViewBag.List)
                    {

                        <tr>
                            <td>
                                @sn

                            </td>
                            <td>

                                @item.EmailAddress
                            </td>
                            <td>

                                @item.ChildFirstName

                                @item.ChildLastName
                            </td>
                            <td>
                                @item.DOB
                            </td>
                            <td>
                                @item.Class
                            </td>
                            <td>
                                @item.Created
                            </td>
                            <td>
                                <input type="text" name="details[@sn].ChildrenId" value="@item.ChildrenId" readonly />
                            </td>
                            <td>

                                <input type="checkbox" name="details[@sn].isActive" id="IsActive[@sn]" value="0" />
                            </td>


                        </tr>
                        sn++;
                    }
                </tbody>
            </table>
            <div>
                <button class="btn btn-lg btn-success btn-block mt-5" id="btnGet" type="submit" style="width:67%; margin-top:5%; margin-left:10%;">Drop Off</button>

            </div>
            <br />
            <br />
                <div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100"  style="width:67%;"><i class="fas fa-sign-out-alt"></i>&nbspBack to Home Page</a>
            </div>

        </form>
       
        <br />



        <footer class="border-top footer text-muted mt-5">
            <div class="container d-flex mt-4 p-3 mb-4 justify-content-center" ;
                 &copy; @DateTime.Now.Year - Rccg Glory Worship Centre Children Application - Powered by IT
            </div>
        </footer>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script>

            $(function () {
                $("#btnGet").click(function () {

                    //Reference the CheckBoxes and insert the checked CheckBox value in Array.
                    $("#table_Name input[type=checkbox]:checked").each(function () {
                        this.value = true;
                    });


                });
            });
        </script>
        <script>
        @if (TempData["ModelState"] != null)
        {
            <text>alert("Children Dropped Off Successfully </text>

        }
        </script>

