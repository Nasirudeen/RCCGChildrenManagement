        </nav>
        <div class="row" id="body-row" style="height: 50px !important">
            <!-- Sidebar -->



        </div>
        <!-- sidebar-container END -->
        <!-- MAIN -->

        <div class="col" style="background-color:#f5fbff">
            @RenderBody()

            <footer class="border-top footer text-muted mt-5">
