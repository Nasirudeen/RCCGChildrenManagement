        <nav class="navbar navbar-expand-md navbar-dark bg-info" style="position:absolute; top:80px; left:0px; width:100%; z-index: 10;">
            <div>
                <a href="~/Home/Index/" class="btn btn-primary">
                    <span class="menu-collapsed"> DASHBOARD </span>
                </a>
            </div>
            @if (User.IsInRole("SuperAdmin") | User.IsInRole("Admin"))
            {
                <div>
                    <a href="~/User/Create/" class="btn btn-primary">
                        <span class="menu-collapsed"> CREATE PARENT </span>
                    </a>
                </div>
                <div>
                    <a href="~/Children/Create/" class="btn btn-primary">
                        <span class="menu-collapsed"> CREATE CHILDREN </span>
                    </a>
                </div>
                <div>
                    <a href="~/User/Index/" class="btn btn-primary">
                        <span class="menu-collapsed"> MANAGE </span>
                    </a>
                </div>
                <div>
                    <a href="~/DropOff/Index/" class="btn btn-primary">
                        <span class="menu-collapsed"> DROP OFF </span>
                    </a>
                </div>
                <div>
                    <a href="~/PickUp/Create/" class="btn btn-primary">
                        <span class="menu-collapsed"> PICK UP </span>
                    </a>
                </div>
                <div>
                    <a href="~/User/Index/" class="btn btn-primary">
                        <span class="menu-collapsed"> USER LIST </span>
                    </a>
                </div>
                <div>
                    <a href="~/Role/Index/" class="btn btn-primary">
                        <span class="menu-collapsed"> ROLE LIST </span>
                    </a>
                </div>
                <div>
                    <a href="~/AuditTrail/Index/" class="btn btn-primary">
                        <span class="menu-collapsed"> AUDIT TRAIL LIST </span>
                    </a>
                </div>
                <div>
                    <a href="~/User/Change/" class="btn btn-primary">
                        <span class="menu-collapsed"> CHANGE PASSWORD </span>
                    </a>
                </div>
                <br />
