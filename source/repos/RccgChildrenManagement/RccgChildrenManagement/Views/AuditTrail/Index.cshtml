@model IEnumerable<RccgChildrenManagement.Models.AuditTrail>

@{
    ViewData["Title"] = "AuditTrail  List";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<CENTER><h4 style="margin-top: 30px; font-size:55px;">AUDIT TRAIL REPORT  </h4></CENTER>
<h4 style="text-align :right;">@DateTime.Now.ToString("dd MMMM, yyyy"), @DateTime.Now.ToShortTimeString()</h4>
<div class="panel-body">
    <div class="row">
    </div>
    <div class="form-border table-responsive" style="margin-top:40px;">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover" id="jayb1" border="1">
                <thead style="background-color:azure;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AuditTrailId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Action)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NewValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IpAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ObjectName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var Id = item.AuditTrailId;

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AuditTrailId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Action)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NewValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IpAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ObjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <center> <p style="color:black; font-size:35px;">No Audit Trail is created</p></center>
        }
    </div>
